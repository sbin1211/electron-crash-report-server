{
	"name": "electron-crash-report-server",
	"description": "Crash report server for Electron applications",
	"version": "2.0.0",
	"license": "Unlicense",
	"author": "John Muhl",
	"homepage": "https://pacific-falls-32011.herokuapp.com/",
	"bugs": "https://github.com/johnmuhl/electron-crash-report-server/issues",
	"repository": "github:johnmuhl/electron-crash-report-server",
	"scripts": {
		"fmt": "run-p -cs fmt:* && eslint . --fix",
		"fmt:default": "yarn run prettier:default --write",
		"fmt:html": "yarn run prettier:html --write",
		"lint": "eslint . && yarn run prettier:default -l && yarn run prettier:html -l",
		"lint:css": "stylelint 'assets/*.css'",
		"prettier:default": "prettier --loglevel warn '**/*.{css,js,json,markdown}'",
		"prettier:html": "prettier --loglevel warn 'templates/*' --parser html",
		"start": "node index.js",
		"start:dev": "nodemon -w '*.*' -w templates/ -e handlebars,js index.js",
		"test": "lab -cLv --coverage-exclude test.js --shuffle test.js",
		"test:watch": "nodemon lab --shuffle test.js"
	},
	"engines": {
		"node": "10.x",
		"yarn": "1.x"
	},
	"dependencies": {
		"@hapi/basic": "5.1.0",
		"@hapi/boom": "7.4.2",
		"@hapi/hapi": "18.3.1",
		"@hapi/inert": "5.2.0",
		"@hapi/joi": "15.0.2",
		"@hapi/vision": "5.5.2",
		"brok": "3.1.0",
		"dotenv": "8.0.0",
		"handlebars": "4.1.2",
		"hapi-pino": "6.0.0",
		"massive": "5.8.0",
		"minidump": "0.15.0",
		"pg-monitor": "1.1.0",
		"pretty-ms": "5.0.0"
	},
	"devDependencies": {
		"@hapi/code": "5.x",
		"@hapi/lab": "18.x",
		"eslint": "5.x",
		"eslint-config-airbnb-base": "13.x",
		"eslint-config-oz": "github:johnmuhl/eslint-config-oz",
		"eslint-config-prettier": "4.x",
		"eslint-import-resolver-node": "0.x",
		"eslint-plugin-html": "5.x",
		"eslint-plugin-import": "2.x",
		"eslint-plugin-unicorn": "8.x",
		"nodemon": "1.x",
		"npm-run-all": "4.x",
		"pino-colada": "1.x",
		"prettier": "1.x",
		"stylelint": "10.x",
		"stylelint-config-recess-order": "2.x",
		"stylelint-config-standard": "18.x"
	},
	"private": true
}
