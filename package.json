{
  "name": "electron-crash-report-server",
  "version": "1.2.0",
  "description": "Crash report server for Electron applications",
  "repository": "github:johnmuhl/electron-crash-report-server",
  "author": "John Muhl <git@johnmuhl.com>",
  "license": "MIT",
  "bugs": "https://github.com/johnmuhl/electron-crash-report-server/issues",
  "homepage": "https://johnmuhl.github.io/electron-crash-report-server",
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build",
    "export": "sapper export",
    "start": "node build",
    "test": "yarn eslint",
    "fmt": "yarn run prettier && yarn run eslint --fix",
    "eslint": "eslint --ext html,js .",
    "prettier": "yarn prettier:default && yarn prettier:html",
    "prettier:default": "prettier --loglevel warn --write '**/*.{css,js,json,md}'",
    "prettier:html": "prettier --loglevel warn --write --parser vue '**/*.html'",
    "heroku-postbuild": "yarn build"
  },
  "engines": {
    "node": "^8.9.4",
    "yarn": "^1.3.2"
  },
  "dependencies": {
    "compression": "1.7.3",
    "cookie-parser": "1.4.3",
    "dotenv": "6.0.0",
    "esm": "3.0.72",
    "express": "4.16.3",
    "express-basic-auth": "1.1.5",
    "massive": "5.1.3",
    "minidump": "0.13.0",
    "multiparty": "4.1.4",
    "pretty-ms": "3.2.0",
    "sapper": "0.15.2",
    "sirv": "0.1.4",
    "svelte": "2.9.6"
  },
  "devDependencies": {
    "eslint": "5.2.0",
    "eslint-config-oz": "github:johnmuhl/eslint-config-oz#4.0.1",
    "eslint-plugin-html": "4.0.5",
    "eslint-plugin-import": "2.13.0",
    "npm-run-all": "4.1.3",
    "prettier": "1.13.7",
    "svelte-loader": "2.10.0",
    "webpack": "4.16.2"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "eslintConfig": {
    "extends": "oz",
    "plugins": [
      "html"
    ],
    "rules": {
      "import/named": 0
    }
  },
  "eslintIgnore": [
    "app/manifest/*",
    "build/**/*",
    "client/*",
    "server/*"
  ],
  "greenkeeper": {
    "ignore": [
      "minidump"
    ]
  },
  "prettier": {
    "proseWrap": "always",
    "trailingComma": "es5"
  }
}
