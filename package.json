{
  "name": "electron-crash-report-server",
  "version": "0.5.6",
  "description": "Crash report server for Electron applications",
  "repository": "github:johnmuhl/electron-crash-report-server",
  "author": "John Muhl <git@johnmuhl.com>",
  "license": "MIT",
  "bugs": "https://github.com/johnmuhl/electron-crash-report-server/issues",
  "homepage": "https://johnmuhl.github.io/electron-crash-report-server",
  "scripts": {
    "dev": "nodemon server.js",
    "fmt": "yarn run prettier && yarn run eslint --fix",
    "test": "yarn eslint",
    "eslint": "eslint --ignore-pattern=public/* .",
    "prettier": "prettier --write '{*,client/*}.js'",
    "heroku-postbuild": "webpack"
  },
  "engines": {
    "node": "^8.9.1"
  },
  "dependencies": {
    "babel-core": "~6.26.0",
    "babel-loader": "~7.1.2",
    "babel-minify-webpack-plugin": "~0.2.0",
    "babel-preset-env": "~1.6.1",
    "babel-preset-react": "~6.24.1",
    "boom": "~7.1.1",
    "css-loader": "~0.28.7",
    "dotenv": "~4.0.0",
    "handlebars": "~4.0.11",
    "hapi": "~17.0.1",
    "hapi-auth-basic": "github:hapijs/hapi-auth-basic#v17",
    "inert": "~5.0.1",
    "massive": "~4.4.0",
    "moment": "~2.19.2",
    "postcss-loader": "~2.0.8",
    "pretty-ms": "~3.0.1",
    "prop-types": "~15.6.0",
    "react": "~16.1.1",
    "react-dom": "~16.1.1",
    "style-loader": "~0.19.0",
    "vision": "~5.1.0",
    "webpack": "~3.8.1"
  },
  "devDependencies": {
    "eslint": "~4.10.0",
    "eslint-config-oz": "github:johnmuhl/eslint-config-oz#v1.1.0",
    "nodemon": "~1.12.1",
    "prettier": "~1.7.4"
  },
  "babel": {
    "presets": [
      "react",
      [
        "env",
        {
          "modules": false,
          "targets": {
            "browsers": [
              "last 2 Chrome versions",
              "last 2 Firefox versions"
            ]
          }
        }
      ]
    ]
  },
  "browserlist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions"
  ],
  "eslintConfig": {
    "extends": "oz"
  },
  "postcss": {
    "from": "./client/index.css",
    "to": "./public/index.css",
    "plugins": {
      "autoprefixer": {}
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "useTabs": true
  }
}
