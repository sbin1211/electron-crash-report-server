{
	"name": "electron-crash-report-server",
	"description": "Crash report server for Electron applications",
	"version": "2.4.0",
	"license": "Unlicense",
	"author": "John Muhl",
	"homepage": "https://pacific-falls-32011.herokuapp.com/",
	"bugs": "https://github.com/johnmuhl/electron-crash-report-server/issues",
	"repository": "github:johnmuhl/electron-crash-report-server",
	"scripts": {
		"fmt": "run-s -s fmt:*",
		"fmt:prettier": "prettier --write '**/*.{css,handlebars,js,json,markdown}'",
		"fmt:eslint": "eslint . --fix",
		"lint": "run-p -s lint:*",
		"lint:eslint": "eslint .",
		"lint:prettier": "prettier -l '**/*.{css,handlebars,js,json,markdown}'",
		"lint:stylelint": "stylelint 'assets/*.css'",
		"start": "node index.js",
		"start:dev": "nodemon -w '*.*' -w templates/ -e handlebars,js index.js",
		"test": "lab -Lcv --coverage-exclude test.js --shuffle test.js",
		"test:watch": "nodemon --exec 'lab --shuffle test.js'"
	},
	"engines": {
		"node": "10.x",
		"yarn": "1.x"
	},
	"dependencies": {
		"@hapi/basic": "5.1.0",
		"@hapi/boom": "7.4.2",
		"@hapi/hapi": "18.3.1",
		"@hapi/inert": "5.2.1",
		"@hapi/joi": "15.0.3",
		"@hapi/vision": "5.5.2",
		"brok": "4.0.0",
		"dotenv": "8.0.0",
		"form-data": "2.4.0",
		"gh-got": "8.1.0",
		"got": "9.6.0",
		"handlebars": "4.1.2",
		"hapi-pino": "6.0.1",
		"massive": "5.11.0",
		"minidump": "0.15.0",
		"nodemailer": "6.2.1",
		"pg-monitor": "1.1.0",
		"pretty-ms": "5.0.0"
	},
	"devDependencies": {
		"@hapi/code": "5.x",
		"@hapi/lab": "19.x",
		"eslint": "5.x",
		"eslint-config-airbnb-base": "13.x",
		"eslint-config-oz": "github:johnmuhl/eslint-config-oz",
		"eslint-config-prettier": "^5.0.0",
		"eslint-import-resolver-node": "0.x",
		"eslint-plugin-html": "5.x",
		"eslint-plugin-import": "2.x",
		"eslint-plugin-unicorn": "^9.0.0",
		"nodemon": "1.x",
		"npm-run-all": "4.x",
		"pino-colada": "1.x",
		"prettier": "1.x",
		"stylelint": "10.x",
		"stylelint-config-recess-order": "^2.0.3",
		"stylelint-config-standard": "18.x"
	},
	"prettier": {
		"proseWrap": "always",
		"trailingComma": "es5",
		"useTabs": true,
		"overrides": [
			{
				"files": "*.handlebars",
				"options": {
					"parser": "html"
				}
			}
		]
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"stylelint-config-recess-order"
		],
		"rules": {
			"indentation": "tab"
		}
	},
	"private": true
}
